<div class ="container">
  <br /><br /><br />

  <div class="row">
    <div class = "col-md-6">
    <img class="show-pic" src="<%= @product.image%>" alt="Jewish thing">
    </div>
<div class = "show-info col-md-6 ">
    <h2> <%= @product.title%></h2>
    <h4 class = "review-link"><%=link_to @product.messages.length.to_s+' reviews',:anchor=>'review-box'%></h4>
    <hr />
    <h4> <%= @product.description%></h4>
    <hr />
  <div class="row">
      <div class = "col-md-6">
      <h3>$<%= @product.price%></h3>
      </div>
    <div class = "col-md-6">
      <%= button_to 'Add to Cart', '/orders', :controller => "orders", :method => "post", params: {:id => @product.id}, class: 'btn'%>
    </div>
  </div>
</div>
</div>
<hr />
</div>
<div class = "container-fluid">
<div class = "row review-box" style="margin:20px">
  <h1 class = "text-center">--Reviews--</h1>
  <%if(current_user)%>
  <%= form_for(@message) do |f| %>
  <div class="field text-center">
    <p><%= f.text_area :content, placeholder: "Write a review for the "+ @product.title, :cols => "100", :rows=>"3"%>
    <% hidden_field_tag "product_id", @product.id.to_s%>
    <%= f.submit "Submit", :class => 'review-btn'%></p>
  </div>
  <%end%>
  <% end %>
  <%if(@reviews.exists?)%>
    <%@reviews.each do |review|%>
    <div class ="review-comments" style="margin:2px">
    <h5><%=review.content%></h5>
    <h6>By: <%= --review.user.username%> on <%= review.created_at.strftime("%d %b. %Y")%></h6>
    <br />
    <%end%>
  <%else%>
  <h4 class="text-center"> No reviews yet,be the first!</h4>
  <%end%>
</div>
</div>
<br />
</div>
