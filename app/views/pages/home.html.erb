    <div class = "row">
      <%@products.take(3).each do |product|%>
      <span><div class="card col-md-4 boxes" style="width: 30rem;">
      <%=link_to '/charges/show/'+(product.id.to_s) do %>
        <img class="card-img-top store-pic" src="<%= product.image%>" alt="Jewish thing">
        <div class="card-block">
          <h3 class="card-title"><%= product.title %></h3>
          <h4 class="card-text">$<%= product.price %></h4>
          <h4 class="card-text"><%= product.messages.length%> Reviews</h4>
        </div></span>
      </div>
        <%end%>
        <%end%>
    </div>
    <br />
    <div class ="row">
    <div class="col-md-12 text-center">
      <%=button_to('See More',{route: '/charges/new', controller: 'charges'}, class:'btn')%>
