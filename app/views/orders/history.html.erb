<div class = "container">
  <br><br>
  <% @orders.each do |order|%>
  <div class ="row">
  <div class ="col-xs-4">
    <img class="order-image" src="<%= order.image%>" alt="Jewish thing">
  </div>
  <div class ="col-xs-4">
  <h2><%= order.items %> at $<%= order.amount%> each</h2>
  <h3>Quantity: <%= order.quantity %></h3>
  <%amount = order.amount * order.quantity%>
  <h3>Total: $<%=amount%></h3>
  </div>
  <div class ="col-xs-4">
  <h2>Bought on <%=order.updated_at.strftime("%m/%d/%Y")%></h2>
</div>
</div>
<hr>
  <%end%>
</div>
